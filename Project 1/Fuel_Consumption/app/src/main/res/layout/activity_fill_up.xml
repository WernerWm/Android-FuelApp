<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fill_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fuelconsuption.FillUpActivity">

    <EditText
        android:id="@+id/editLiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editLiter"
        android:layout_alignStart="@+id/editLiter"
        android:layout_below="@+id/editLiter"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/editOdometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPrice"
        android:layout_alignRight="@+id/editPrice"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtLiters"
        android:layout_toEndOf="@+id/txtLiters" />

    <TextView
        android:id="@+id/txtLiters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liters"
        android:layout_alignBaseline="@+id/editLiter"
        android:layout_alignBottom="@+id/editLiter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editPrice"
        android:layout_alignLeft="@+id/txtLiters"
        android:layout_alignStart="@+id/txtLiters"
        android:layout_marginBottom="10dp"
        android:text="Price" />

    <TextView
        android:id="@+id/txtOdemeterReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtPrice"
        android:layout_alignRight="@+id/txtPrice"
        android:layout_centerVertical="true"
        android:text="OdometerReading" />

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editLiter"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editLiter"
        android:text="Fill Up Details"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtAverageFuelUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Fuel Used: "
        android:textSize="18sp"
        android:layout_below="@+id/txtOdemeterReading"
        android:layout_toRightOf="@+id/txtOdemeterReading"
        android:layout_toEndOf="@+id/txtOdemeterReading"
        android:layout_marginTop="53dp" />

    <Button
        android:id="@+id/btnAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_toRightOf="@+id/txtAverageFuelUsed"
        android:layout_toEndOf="@+id/txtAverageFuelUsed" />

</RelativeLayout>
